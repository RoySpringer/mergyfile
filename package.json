  },
  "dependencies": {
    "electron-debug": "^3.1.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9",
    "history": "^5.0.0",
    "lodash": "^4.17.21",
    "pdf-lib": "^1.16.0",
